{
    "swagger": "2.0",
    "info": {
        "title": "MAIA-LAB API",
        "description": "MAIA-LAB REST API - internal and external",
        "version": "4",
        "x-ISC_Namespace": "MAIA"
    },
    "host": "localhost",
    "basePath": "/api/maia-lab/v4",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "basicAuth": {
            "type": "basic"
        }
    },
    "security": [
        {
            "basicAuth": []
        }
    ],
    "paths": {
        "/worklist": {
            "post": {
                "operationId": "PushWorklist",
                "description": "External API: Integrator pushes patient worklist to ColoMAIA",
                "x-ISC_ServiceMethod": "PushWorklist",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "worklist",
                        "in": "body",
                        "description": "Worklist data to be pushed",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/WorklistPushRequest"
                        }
                    }
                ],
                "responses": {
                    "default": {
                        "description": "(Unexpected Error)"
                    },
                    "200": {
                        "description": "(Expected Result)",
                        "schema": {
                            "$ref": "#/definitions/WorklistPushResponse"
                        }
                    }
                }
            }
        },
        "/report": {
            "get": {
                "operationId": "GetReport",
                "description": "External API: Integrator retrieves diagnostic report from ColoMAIA by accession number. Reports are available for 24 hours after webhook notification.",
                "x-ISC_ServiceMethod": "GetReport",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "accessionNumber",
                        "in": "query",
                        "type": "string",
                        "required": true,
                        "description": "Accession number from Hospital Information System"
                    }
                ],
                "responses": {
                    "default": {
                        "description": "(Unexpected Error)"
                    },
                    "200": {
                        "description": "(Expected Result)",
                        "schema": {
                            "$ref": "#/definitions/Report"
                        }
                    },
                    "404": {
                        "description": "Report not found"
                    },
                    "410": {
                        "description": "Report expired (after 24 hours) - GDPR compliance"
                    }
                }
            }
        },
        "/webhook/report-ready": {
            "post": {
                "operationId": "WebhookReportReady",
                "description": "⚠️ INTEGRATOR IMPLEMENTS THIS ENDPOINT ⚠️\n\nThis is NOT a ColoMAIA endpoint. YOU must implement this webhook endpoint on your server.\n\nColoMAIA will call this endpoint on your server when a report is ready:\n- Register your webhook URL with Maia Labs during setup\n- Accept POST requests with ReportReadyNotification payload\n- Return HTTP 200 within 10 seconds\n- Process report retrieval asynchronously\n- ColoMAIA retries failed calls: 3 attempts with exponential backoff",
                "x-ISC_ServiceMethod": "WebhookReportReady",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "notification",
                        "in": "body",
                        "description": "Report ready notification payload sent by ColoMAIA",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ReportReadyNotification"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Webhook received successfully - your endpoint should return this immediately"
                    },
                    "500": {
                        "description": "Internal server error - ColoMAIA will retry"
                    }
                }
            }
        },
        "/report/{accessionNumber}/media": {
            "get": {
                "operationId": "GetReportMedia",
                "description": "Download media attachments (images and videos) for a report. Media is available for 24 hours after webhook notification.",
                "x-ISC_ServiceMethod": "GetReportMedia",
                "produces": [
                    "application/zip"
                ],
                "parameters": [
                    {
                        "name": "accessionNumber",
                        "in": "path",
                        "type": "string",
                        "required": true,
                        "description": "Accession number from Hospital Information System"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ZIP file containing all media files (JPEG images and MP4 videos)",
                        "schema": {
                            "type": "file"
                        }
                    },
                    "404": {
                        "description": "Report or media not found"
                    },
                    "410": {
                        "description": "Media expired (after 24 hours) - GDPR compliance"
                    }
                }
            }
        },
        "/webhook": {
            "get": {
                "operationId": "GetWebhookConfig",
                "description": "Retrieve current webhook configuration",
                "x-ISC_ServiceMethod": "GetWebhookConfig",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Current webhook configuration",
                        "schema": {
                            "$ref": "#/definitions/WebhookConfig"
                        }
                    },
                    "404": {
                        "description": "No webhook configured"
                    }
                }
            },
            "post": {
                "operationId": "RegisterWebhook",
                "description": "Register or update webhook endpoint URL",
                "x-ISC_ServiceMethod": "RegisterWebhook",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "webhook",
                        "in": "body",
                        "description": "Webhook configuration",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/WebhookRegistration"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Webhook registered successfully",
                        "schema": {
                            "$ref": "#/definitions/WebhookConfig"
                        }
                    },
                    "400": {
                        "description": "Invalid webhook URL"
                    }
                }
            },
            "delete": {
                "operationId": "UnregisterWebhook",
                "description": "Unregister webhook endpoint",
                "x-ISC_ServiceMethod": "UnregisterWebhook",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Webhook unregistered successfully"
                    },
                    "404": {
                        "description": "No webhook configured"
                    }
                }
            }
        }
    },
    "definitions": {
        "WorklistPushRequest": {
            "type": "object",
            "required": [
                "location",
                "patients"
            ],
            "properties": {
                "location": {
                    "type": "string",
                    "description": "Location where device is located."
                },
                "patients": {
                    "type": "array",
                    "description": "List of patients in the worklist.",
                    "items": {
                        "$ref": "#/definitions/WorklistPatient"
                    }
                }
            }
        },
        "WorklistPatient": {
            "type": "object",
            "required": [
                "patient_id",
                "accession_number"
            ],
            "properties": {
                "patient_id": {
                    "type": "string",
                    "description": "Patient identifier."
                },
                "accession_number": {
                    "type": "string",
                    "description": "Accession number from Hospital Information System."
                },
                "given_name": {
                    "type": "string",
                    "description": "Patient's first name."
                },
                "surname": {
                    "type": "string",
                    "description": "Patient's last name."
                },
                "birth_date": {
                    "type": "string",
                    "format": "date",
                    "description": "Patient's date of birth (ISO format)."
                },
                "examination_schedule": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Scheduled examination time (ISO format)."
                },
                "modality": {
                    "type": "string",
                    "enum": [
                        "colonoscopy",
                        "gastroscopy"
                    ],
                    "description": "Type of examination modality."
                }
            }
        },
        "WorklistPushResponse": {
            "type": "object",
            "required": [
                "status",
                "message"
            ],
            "properties": {
                "status": {
                    "type": "integer",
                    "description": "Status code of the response (e.g., 200 for success)."
                },
                "message": {
                    "type": "string",
                    "description": "Response message."
                },
                "received_count": {
                    "type": "integer",
                    "description": "Number of patients received in the worklist."
                }
            }
        },
        "ReportReadyNotification": {
            "type": "object",
            "required": [
                "accession_number",
                "status"
            ],
            "properties": {
                "accession_number": {
                    "type": "string",
                    "description": "Accession number from Hospital Information System - use this to retrieve the report via GET /report?accessionNumber={accessionNumber}"
                },
                "patient_id": {
                    "type": "string",
                    "description": "Patient identifier (optional)."
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "final",
                        "preliminary"
                    ],
                    "description": "Status of the report."
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Time when report became ready (ISO format)."
                }
            }
        },
        "WebhookRegistration": {
            "type": "object",
            "required": [
                "url"
            ],
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "HTTPS URL of your webhook endpoint (must be publicly accessible)"
                },
                "description": {
                    "type": "string",
                    "description": "Optional description of this webhook integration"
                }
            }
        },
        "WebhookConfig": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Currently registered webhook URL"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "active",
                        "inactive",
                        "failed"
                    ],
                    "description": "Status of webhook: active (working), inactive (not tested yet), failed (last delivery failed)"
                },
                "last_tested": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of last webhook test"
                },
                "last_delivery": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of last successful webhook delivery"
                },
                "description": {
                    "type": "string",
                    "description": "Optional description of this webhook integration"
                }
            }
        },
        "Patient": {
            "description": "Information about the patient undergoing the examination.",
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Universally unique identifier of the patient."
                },
                "mrn": {
                    "type": "string",
                    "description": "Medical Record Number of the patient."
                },
                "id": {
                    "type": "string",
                    "description": "Local patient identifier."
                },
                "given_name": {
                    "type": "string",
                    "description": "Patient's first name."
                },
                "surname": {
                    "type": "string",
                    "description": "Patient's last name."
                },
                "assigning_authority_OID": {
                    "type": "string",
                    "description": "OID of the assigning authority."
                },
                "birth_date": {
                    "type": "string",
                    "description": "Patient's date of birth (ISO format)."
                },
                "age": {
                    "type": "integer",
                    "format": "int32",
                    "description": "Patient's age in years."
                }
            }
        },
        "Report": {
            "description": "Comprehensive report of a medical examination.",
            "type": "object",
            "required": [
                "id",
                "time_start",
                "time_end",
                "practitioner",
                "nurse",
                "patient",
                "premedication",
                "statistics",
                "findings",
                "notes",
                "report_text",
                "references",
                "report_status",
                "additional_comment",
                "last_change"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the report."
                },
                "time_start": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Start time of the examination (ISO format)."
                },
                "time_end": {
                    "type": "string",
                    "format": "date-time",
                    "description": "End time of the examination (ISO format)."
                },
                "practitioner": {
                    "$ref": "#/definitions/Practitioner",
                    "description": "Details of the practitioner performing the examination."
                },
                "nurse": {
                    "$ref": "#/definitions/Nurse",
                    "description": "Details of the nurse assisting in the examination."
                },
                "patient": {
                    "$ref": "#/definitions/Patient",
                    "description": "Details of the patient undergoing the examination."
                },
                "premedication": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of premedications administered."
                },
                "statistics": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Statistics"
                    },
                    "description": "Statistical data from the examination."
                },
                "findings": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Finding"
                    },
                    "description": "List of findings observed during the examination."
                },
                "notes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Note"
                    },
                    "description": "List of notes recorded during the examination."
                },
                "report_text": {
                    "$ref": "#/definitions/ReportText",
                    "description": "Full text content of the report."
                },
                "references": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of references or external documents related to the report."
                },
                "report_status": {
                    "type": "string",
                    "enum": [
                        "final",
                        "registered",
                        "partial",
                        "preliminary",
                        "modified",
                        "amended",
                        "corrected",
                        "appended",
                        "cancelled",
                        "entered-in-error",
                        "unknown"
                    ],
                    "description": "Current status of the report (e.g., final, preliminary)."
                },
                "additional_comment": {
                    "type": "string",
                    "description": "Additional comments or notes about the report."
                },
                "last_change": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of the last modification (ISO format)."
                },
                "issue_date": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Date and time when the report was issued (ISO format)."
                }
            }
        },
        "Practitioner": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the practitioner."
                },
                "given_name": {
                    "type": "string",
                    "description": "Practitioner's first name."
                },
                "surname": {
                    "type": "string",
                    "description": "Practitioner's last name."
                }
            }
        },
        "Nurse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the nurse."
                },
                "given_name": {
                    "type": "string",
                    "description": "Nurse's first name."
                },
                "surname": {
                    "type": "string",
                    "description": "Nurse's last name."
                }
            }
        },
        "ReportText": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string",
                    "description": "Full text of the report."
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of when the report text was created (ISO format)."
                }
            }
        },
        "Statistics": {
            "type": "object",
            "required": [
                "duration",
                "extraction_time",
                "BBPS",
                "visibility",
                "ileum_reached",
                "cecum_reached",
                "tools_used"
            ],
            "properties": {
                "duration": {
                    "$ref": "#/definitions/FloatValueTypePair",
                    "description": "Duration of the examination in seconds."
                },
                "extraction_time": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Time taken for extraction process."
                },
                "BBPS": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Boston Bowel Preparation Scale score."
                },
                "visibility": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Visibility conditions during the examination."
                },
                "ileum_reached": {
                    "$ref": "#/definitions/BooleanValueTypePair",
                    "description": "Indicates if the ileum was reached."
                },
                "cecum_reached": {
                    "$ref": "#/definitions/BooleanValueTypePair",
                    "description": "Indicates if the cecum was reached."
                },
                "tools_used": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/StringValueTypePair"
                    },
                    "description": "List of tools used during the examination."
                }
            }
        },
        "Finding": {
            "type": "object",
            "required": [
                "position",
                "snapshot_ids"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the finding."
                },
                "position": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Anatomical position of the finding."
                },
                "size": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Size of the finding (e.g., in mm)."
                },
                "classification_paris": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Paris classification of the finding."
                },
                "tool": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Tool used to identify or treat the finding."
                },
                "raw_transcription": {
                    "type": "string",
                    "description": "Raw transcription text from the finding."
                },
                "sample_taken": {
                    "$ref": "#/definitions/Sample",
                    "description": "Details of any sample taken from the finding."
                },
                "snapshot_ids": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Snapshot"
                    },
                    "description": "List of snapshots associated with this finding."
                }
            }
        },
        "Note": {
            "type": "object",
            "required": [
                "position",
                "snapshot_ids"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the note."
                },
                "position": {
                    "$ref": "#/definitions/StringValueTypePair",
                    "description": "Anatomical position related to the note."
                },
                "raw_transcription": {
                    "type": "string",
                    "description": "Raw transcription text of the note."
                },
                "snapshot_ids": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Snapshot"
                    },
                    "description": "List of snapshots associated with this note."
                }
            }
        },
        "Snapshot": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the snapshot."
                },
                "timestamp": {
                    "type": "string",
                    "description": "Absolute timestamp of when the snapshot was taken (ISO format)."
                },
                "timestamp_relative": {
                    "type": "number",
                    "format": "float",
                    "description": "Relative time in seconds from the start of the examination."
                },
                "image_id": {
                    "type": "string",
                    "description": "Identifier of the associated image file."
                }
            }
        },
        "Sample": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "boolean",
                    "description": "Indicates if a sample was taken (true/false)."
                },
                "id": {
                    "type": "string",
                    "description": "Unique identifier of the sample."
                },
                "type": {
                    "$ref": "#/definitions/TypeEnum",
                    "description": "Data type of the sample value (e.g., string, float)."
                },
                "source": {
                    "$ref": "#/definitions/SourceType",
                    "description": "Source of the sample data (manual or automatic)."
                }
            }
        },
        "StringValueTypePair": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "string",
                    "description": "The actual string value."
                },
                "type": {
                    "$ref": "#/definitions/TypeEnum",
                    "description": "The data type of the value (e.g., string, float)."
                },
                "source": {
                    "$ref": "#/definitions/SourceType",
                    "description": "Source of the value (manual or automatic)."
                }
            }
        },
        "BooleanValueTypePair": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "boolean",
                    "description": "The actual boolean value (true/false)."
                },
                "type": {
                    "$ref": "#/definitions/TypeEnum",
                    "description": "The data type of the value (e.g., bool)."
                },
                "source": {
                    "$ref": "#/definitions/SourceType",
                    "description": "Source of the value (manual or automatic)."
                }
            }
        },
        "FloatValueTypePair": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "format": "float",
                    "description": "The actual float value."
                },
                "type": {
                    "$ref": "#/definitions/TypeEnum",
                    "description": "The data type of the value (e.g., float)."
                },
                "source": {
                    "$ref": "#/definitions/SourceType",
                    "description": "Source of the value (manual or automatic)."
                }
            }
        },
        "TypeEnum": {
            "type": "string",
            "enum": [
                "string",
                "float",
                "int",
                "bool"
            ],
            "description": "Enumeration of possible data types."
        },
        "SourceType": {
            "type": "string",
            "enum": [
                "manual",
                "automatic"
            ],
            "description": "Enumeration of possible data sources."
        }
    }
}